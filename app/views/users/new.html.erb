<h1>Users#new</h1>
<div id="signup-form">
  <%= form_for(@user) do |f| %>
    <%= f.text_field :name, id: "signup-form-name", placeholder: "ユーザー名"%>
    <%= f.text_field :email, id: "signup-form-email", placeholder: "メールアドレス"%>
    <%= f.password_field :password, id: "signup-form-password" , placeholder: "パスワード"%>
    <%= f.password_field :password_confirmation, id: "signup-form-password-confirmation" , placeholder: "パスワード確認"%>
    <%= f.submit value: "アカウント登録", id: "signup-button"%>
  <%end%>
</div>
